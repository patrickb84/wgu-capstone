{
  "firestore": {
    "rules": "src/firebase/rules/firestore.rules",
    "indexes": "src/firebase/rules/firestore.indexes"
  },
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "storage": {
    "rules": "src/firebase/rules/storage.rules"
  }
}
